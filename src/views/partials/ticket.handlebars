<div>
    <h2>Ticket</h2>
    {{#if ticket}}
        <p>Code: {{ticket.code}}</p>
        <p>Date Time: {{ticket.purchase_datetime}}</p>
        <p>Total: $ {{ticket.amount}}</p>
        <p>Comprador: {{ticket.purchaser}}</p>
        <p>Productos:
             <div>
                <table>
                    <thead>
                        <tr>
                            <th>
                                Product name
                            </th>
                            <th>
                                Codigo
                            </th>
                            <th>
                                Cantidad
                            </th>
                            <th>
                                Price
                            </th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        {{#each ticket.products}}
                        <tr>
                            <th>
                                {{this.product.title}}
                            </th>
                            <td>
                                {{this.product.code}}
                            </td>
                            <td>
                                {{this.quantity}}
                            </td>
                            <td>
                                $ {{this.product.price}}
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </p>
        
    {{/if}}

</div>