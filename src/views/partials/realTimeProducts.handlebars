<h2> Real Time Products </h2>

<div>
    <form id="form">
        Title: <input name="title" id="title"> <br>
        Description: <input name="description" id="description"> <br> 
        Category: <input name="category" id="category"> <br>
        Price: <input name="price" id="price" type="number"> <br>
        Thumbnail: <input name="thumbnail" id="thumbnail"> <br>
        Code: <input name="code" id="code" type="number"> <br> 
        Stock: <input name="stock" id="stock" type="number"> <br>
        <input type="submit" value="Add product" id="addbtn"> <br> 
    </form>
</div>

<div id="productsList">

    {{#each product}}
        <h4>{{this.title}}</h4>
        <p>{{this.description}}</p>
        <p>{{this.category}}</p>
        <p>{{this.price}}</p>
        <p>{{this.thumbnail}}</p>
        <p>{{this.code}}</p>
        <p>{{this.stock}}</p>
    {{/each}}

</div>

<div class="footer">

    <a href="/" class="link">Inicio</a>
    <a href="/products" class="link">Productos</a>
    <a href="/chat" class="link">Chat</a>
    {{#if user}}
            <a href="api/session/logout" class="link">Cerrar sesion</a>
    {{else}}
            <a href="/login" class="link">Iniciar sesion</a>
            <a href="/register" class="link">Registrarse</a>
    {{/if}}

</div>

{{!----- SCRIPTS -----}}

<script src="/socket.io/socket.io.js"></script>
<script src="/realTimeProducts.js"></script>


{{!-- ESTILOS --}}

<style>
h2 {
    font-size: 2rem;
    color: #e44d26; /* Color principal del ecommerce */
    margin-bottom: 20px;
}

form {
    display: flex;
    flex-direction: column;
    max-width: 300px;
    margin-bottom: 20px;
}

form input {
    margin-bottom: 10px;
    padding: 8px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

#addbtn {
    background-color: #e44d26;
    color: #fff;
    padding: 10px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
}

#addbtn:hover {
    background-color: #333;
}

#productsList {
    margin-top: 20px;
}

#productsList h4 {
    font-size: 1.2rem;
    color: #333;
    margin-top: 10px;
}

#productsList p {
    font-size: 0.9rem;
    color: #666;
    margin: 5px 0;
}
</style>