<div class="productContainer">
    <div class="imgContainer">
        <img class="img" src="" alt="{{product.title}}">
    </div>

    <div class="titleContainer">
        <h3 class="title"> {{product.title}}</h3>
    </div>
    
    <div class="infoContainer">
        <p class="text description">{{product.description}}</p>
        <p class="text">{{product.category}}</p>
        <p class="text price">U$D {{product.price}}</p>
        <p class="text">Disponibles: {{product.stock}}</p>
    </div>

    <div class="btnContainer">
        <a href="http://localhost:8080/products"><button class="btn">Volver atr√°s</button></a>
        <button class="btn">Agregar al carrito</button>
    </div>
</div>

<div class="footer">

    <a href="/" class="link">Inicio</a>
    <a href="/products" class="link">Productos</a>
    <a href="/chat" class="link">Chat</a>
    {{#if user}}
            <a href="api/session/logout" class="link">Cerrar sesion</a>
    {{else}}
            <a href="/login" class="link">Iniciar sesion</a>
            <a href="/register" class="link">Registrarse</a>
    {{/if}}

</div>

